    <style>
      body {
        background-image: linear-gradient(
            rgba(255, 255, 255, 0.3),
            rgba(255, 255, 255, 0.3)
          ),
          url("https://images.unsplash.com/photo-1496545672447-f699b503d270?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=ba3fa37b995a705a01d022cada13f726&auto=format&fit=crop&w=1051&q=80");
        background-size: cover;
        background-position: center;
      }
      html {
        height: 100%;
      }
      .content {
        margin-top: 12rem;
        text-align: center;
      }
      hr {
        width: 40%;
        border-top: 1px solid #f6f6f6;
      }
      .container h1 {
        font-weight: 700;
        font-size: 90px;
      }
      /* RESPONSIVE 600px */
      @media only screen and (max-width: 767px) {
        .container h1 {
          font-weight: 700;
          font-size: 60px;
        }
      }
      @media only screen and (max-width: 486px) {
        .container h3 {
          font-size: 20px;
        }
      }
