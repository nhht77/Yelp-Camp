<div class="modal fade" id="editCampground">
  <div class="modal-dialog">
    <div class="modal-content">
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
      <div class="modal-header">
        <h5 class="modal-title">Edit <%= campground.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <div class="form-group">
            <label for="campground-name" class="col-form-label">Name:</label>
            <input class="form-control" name="campground[name]" id="campground-name" value="<%= campground.name %>"></textarea>
          </div>
          <div class="form-group">
            <label for="campground-image" class="col-form-label">Image:</label>
            <input class="form-control" name="campground[image]" id="campground-imaget" value="<%= campground.image %>"></textarea>
          </div>
          <div class="form-group">
            <label for="campground-description" class="col-form-label">Description:</label>
            <input class="form-control" name="campground[description]" id="campground-description" value="<%= campground.description %>"></textarea>
          </div>
          <div class="form-group">
            <label for="campground-cost" class="col-form-label">Cost:</label>
            <input class="form-control" id="campground-cost" type="number" name="cost" placeholder="0.00" step="0.01" min="0" required>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Edit</button>
      </div>
      </form>
    </div>
  </div>
</div>